#!/bin/sh

set -e

cp /etc/sudoers /etc/sudoers.jolicloud_restore_utility
sed '/# JOLICLOUD-RESTORE-UTILITY-START/,/# JOLICLOUD-RESTORE-UTILITY-END/ d' < /etc/sudoers.jolicloud_restore_utility > /etc/sudoers
rm /etc/sudoers.jolicloud_restore_utility

cat >/etc/sudoers.d/01-restore <<EOF
# Automatically generated by jolicloud-restore-utility. DO NOT EDIT!
%admin ALL=(ALL)NOPASSWD: SETENV: /usr/bin/jolicloud-restore-utility
EOF

chmod 0440 /etc/sudoers.d/01-restore

#DEBHELPER#

exit 0
